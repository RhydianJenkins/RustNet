{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "indent": ["error", 2],
        "trailingComma": ["error", "always"],
        "space-before-function-paren": ["error", "never"],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }],
    }
}
