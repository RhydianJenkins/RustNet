{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["solid"],
  "extends": ["eslint:recommended", "plugin:solid/typescript"],
  "ignorePatterns": ["dist"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "trailingComma": ["error", "always"],
    "space-before-function-paren": ["error", "never"],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }]
  }
}
